<!DOCTYPE html>
<html lang="en">
<head>
    <title>Test application</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <h2>Add provider</h2>
        <form asp-controller="Provider" asp-action="CreateProvider" method="post">
            <div>
                <a asp-controller="Provider" asp-action="CreateProviderType">Add provider type</a>
                <br />
                <select class="form-select" aria-label="Default select example">
                    <option selected>Select provider type</option>
                    @foreach (var providerType in ViewBag.ProviderTypes.Data)
                    {
                        <option value="@providerType.Id">@providerType.Name</option>
                    }
                </select>
            </div>
            <br />
            <div>
                <a asp-controller="Group" asp-action="CreateGroup">Add group</a>
                </br>
                <select class="form-select" aria-label="Default select example">
                    <option selected>Select group</option>
                    @foreach (var group in ViewBag.Groups.Data)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
            <br />
            <div class="form-group">
                <label for="provider_name">Name:</label>
                <input type="text" class="form-control" id="provider_name" placeholder="Provider name" name="provider_name">
            </div>
            <button type="submit" class="btn btn-default">Add</button>
        </form>
    </div>
</body>
</html>
