@model ResponseModel<IList<ProviderResponseModel>>

<body>
    <div class="container">
        <h2>Providers</h2>
        @if (Model.Data.Count == 0 || Model.Data is null)
        { 
            <h3 style="text-align: center">No providers</h3>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Provider Name</th>
                        <th>Provider Type</th>
                        <th>Group</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var provider in Model.Data)
                    {
                        <tr>
                            <td>@provider.Id</td>
                            <td>@provider.Name</td>
                            <td>@provider.ProviderType.Name</td>
                            <td>@provider.Group.Name</td>
                            <td>
                                <a style="text-decoration: underline; cursor:pointer;" onclick="deleteProvider(@provider.Id)">Delete</a> /
                                <a asp-controller="Provider" asp-action="GetProvider" asp-route-providerId="@provider.Id">Edit</a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        }

    </div>
</body>
<script src="~/js/provider.js"></script>